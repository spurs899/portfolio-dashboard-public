@using MudBlazor

<MudCard Elevation="0" Class="mb-4" Style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <MudCardContent Class="pa-3 pa-sm-4">
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            <!-- Desktop/Tablet View - Horizontal Layout -->
            <div class="d-flex justify-space-between align-center flex-wrap">
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.Schedule" Color="Color.Default" Size="Size.Medium" Class="mr-3" Style="color: white;" />
                    <div>
                        <MudText Typo="Typo.body2" Style="color: rgba(255,255,255,0.9); font-weight: 500;">Local Time (@LocalTimeZone)</MudText>
                        <MudText Typo="Typo.h6" Style="color: white; font-weight: 600;">@LocalTime</MudText>
                    </div>
                </div>
                <div class="d-flex align-center">
                    <MudIcon Icon="@Icons.Material.Filled.Public" Color="Color.Default" Size="Size.Medium" Class="mr-3" Style="color: white;" />
                    <div>
                        <MudText Typo="Typo.body2" Style="color: rgba(255,255,255,0.9); font-weight: 500;">NYSE (Eastern Time)</MudText>
                        <MudText Typo="Typo.h6" Style="color: white; font-weight: 600;">@NyseTime</MudText>
                    </div>
                </div>
                <div class="d-flex align-center">
                    <MudChip T="string" Size="Size.Small" Class="@GetMarketStatusClass()">@MarketStatus</MudChip>
                </div>
            </div>
        </MudHidden>
        <MudHidden Breakpoint="Breakpoint.MdAndUp">
            <!-- Mobile View - Compact Layout -->
            <div class="d-flex justify-space-between align-center">
                <div class="d-flex align-center" style="flex: 1;">
                    <MudIcon Icon="@Icons.Material.Filled.Schedule" Color="Color.Default" Size="Size.Small" Class="mr-2" Style="color: white;" />
                    <div>
                        <MudText Typo="Typo.caption" Style="color: rgba(255,255,255,0.9);">@LocalTimeZone</MudText>
                        <MudText Typo="Typo.body2" Style="color: white; font-weight: 600;">@LocalTime</MudText>
                    </div>
                </div>
                <div class="d-flex align-center" style="flex: 1;">
                    <MudIcon Icon="@Icons.Material.Filled.Public" Color="Color.Default" Size="Size.Small" Class="mr-2" Style="color: white;" />
                    <div>
                        <MudText Typo="Typo.caption" Style="color: rgba(255,255,255,0.9);">NYSE</MudText>
                        <MudText Typo="Typo.body2" Style="color: white; font-weight: 600;">@NyseTime</MudText>
                    </div>
                </div>
                <div>
                    <MudChip T="string" Size="Size.Small" Class="@GetMarketStatusClass()">@MarketStatus</MudChip>
                </div>
            </div>
        </MudHidden>
    </MudCardContent>
</MudCard>
